@page "/reset-user-password"
@layout LoginLayout
@inherits SoccerLeagueTransferApp.Pages.ResetUserPasswordComponent

@using Radzen
@using Radzen.Blazor
@using SoccerLeagueTransferApp.Models.ConData
<RadzenContent Container="main">
  <ChildContent>
    <div class="row">
      <div class="col-md-12">
        <RadzenTemplateForm Data="@user" TItem="SoccerLeagueTransferApp.Models.ConData.User" Visible="@(user != null)" Submit="@Form0Submit">
          <ChildContent>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenHeading Size="H1" style="text-align: center; width: 396.2874984741211px" Text="Reset Your Password">
                </RadzenHeading>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Component="EmailAddress" style="width: 100%" Text="Email Address">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenTextBox AutoComplete="false" Placeholder="Enter Your Email Address " style="width: 100%" @bind-Value="@(user.EmailAddress)" Name="EmailAddress">
                </RadzenTextBox>
                <RadzenRequiredValidator Component="EmailAddress" Text="Email Address Is Required">
                </RadzenRequiredValidator>
                <RadzenEmailValidator Component="EmailAddress" Text="Please Enter Valid Email Address">
                </RadzenEmailValidator>
              </div>
            </div>
            <div class="row">
              <div class="col offset-sm-3">
                <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Size="ButtonSize.Medium" Text="Reset ">
                </RadzenButton>
                <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Click="@Button2Click">
                </RadzenButton>
              </div>
            </div>
          </ChildContent>
        </RadzenTemplateForm>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
